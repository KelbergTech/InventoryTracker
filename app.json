{
  "expo": {
    "name": "InventoryTracker",
    "slug": "InventoryTracker",
    "scheme": "inventorytracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "extra": {
      "eas": {
        "projectId": "8f45ca3a-2c95-48f8-aff8-9d4331f46da8"
      }
    },
    "plugins": [
      "expo-router",

      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow MyApp to access camera."
        }
      ]
    ]
  }
}
